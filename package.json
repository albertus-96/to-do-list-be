{
	"name": "to-do-list-be",
	"version": "1.0.0",
	"description": "This is a repository for BE side of React-To-Do-List App",
	"main": "server.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"server": "nodemon server.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/albertus-96/to-do-list-be"
	},
	"author": "Albertus Eko Suryanto",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/albertus-96/to-do-list-be/issues"
	},
	"homepage": "https://github.com/albertus-96/to-do-list-be#readme",
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"verbose": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/app/**/*.js"
		]
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"http-status": "^1.5.0",
		"jest": "^27.1.0",
		"joi": "^17.4.2",
		"mongoose": "^6.0.4",
		"nodemon": "^2.0.12",
		"ts-node": "^10.2.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"typescript": "^4.4.2"
	}
}
