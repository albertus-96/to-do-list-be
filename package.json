{
	"name": "to-do-list-be",
	"version": "1.0.0",
	"description": "This is a repository for BE side of React-To-Do-List App",
	"main": "server.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"server": "nodemon server.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/albertus-96/to-do-list-be"
	},
	"author": "Albertus Eko Suryanto",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/albertus-96/to-do-list-be/issues"
	},
	"homepage": "https://github.com/albertus-96/to-do-list-be#readme",
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"verbose": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/app/**/*.js"
		]
	},
	"dependencies": {
		"dotenv": "^10.0.0",
		"mongoose": "^6.0.4",
		"nanoid": "^3.1.25",
		"nodemon": "^2.0.12",
		"ts-node": "^10.2.1"
	},
	"devDependencies": {
		"typescript": "^4.4.2"
	},
	"nodemonConfig": {
		"ignore": [
			"*.json"
		]
	}
}
