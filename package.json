{
	"name": "to-do-list-be",
	"version": "1.0.0",
	"description": "This is a repository for BE side of React-To-Do-List App",
	"main": "server.js",
	"scripts": {
		"test": "jest --watchAll --coverage --verbose  --runInBand --env node",
		"server": "nodemon server.ts",
		"start": "nodemon server.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/albertus-96/to-do-list-be"
	},
	"author": "Albertus Eko Suryanto",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/albertus-96/to-do-list-be/issues"
	},
	"homepage": "https://github.com/albertus-96/to-do-list-be#readme",
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testEnvironment": "node",
		"preset": "ts-jest",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"verbose": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/app/**/*.ts"
		]
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-fileupload": "^1.1.7",
		"@types/passport-jwt": "^3.0.6",
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.1",
		"http-status": "^1.5.0",
		"joi": "^17.4.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.4",
		"nodemon": "^2.0.12",
		"passport": "^0.5.0",
		"passport-jwt": "^4.0.0",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@types/supertest": "^2.0.11",
		"jest": "^27.2.4",
		"mongodb-memory-server": "^7.4.2",
		"supertest": "^6.1.6",
		"ts-jest": "^27.0.5"
	}
}
